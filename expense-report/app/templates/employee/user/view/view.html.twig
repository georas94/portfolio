{% extends 'expense-base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <h1 class="text-center">Profil</h1>
    <div class="main-sub container">
    <div class="row mt-5 d-flex flex-column align-items-center">
        {% for message in app.flashes('success') %}
            <div class="d-flex justify-content-center">
                <div class="alert alert-success w-25 text-center">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="d-flex justify-content-center">
                <div class="alert alert-danger w-25 text-center">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {{ form_start(form) }}
        <h3 class="text-center mb-2">Mettre Ã  jour mon mot de passe</h3>
        <div class="d-flex flex-column align-items-center mt-5">
            <div class="form-outline mb-4 w-25">
                {% if form_errors(form.plainPassword) != '' %}
                    <div class="alert alert-danger mt-2">
                        {{ form_errors(form.plainPassword) }}
                    </div>
                {% endif %}
                {{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'h5'}}) }}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control mt-3'}}) }}
            </div>
            <div class="form-outline mb-4 w-25">
                {% if form_errors(form.plainPasswordConfirm) != '' %}
                    <div class="alert alert-danger mt-2">
                        {{ form_errors(form.plainPasswordConfirm) }}
                    </div>
                {% endif %}
                {{ form_label(form.plainPasswordConfirm, 'Confirmer mot de passe', {'label_attr': {'class': 'h5'}}) }}
                {{ form_widget(form.plainPasswordConfirm, {'attr': {'class': 'form-control mt-3'}}) }}
            </div>
            <button type="submit" class="btn btn-light mt-2 w-25 btn-lg">Soumettre</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}