{% extends 'base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="d-flex justify-content-end">
            <div class="alert text-center" style="background: #4CAF50!important;font-weight: 900 !important;">
                {{ message }}
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="d-flex justify-content-end">
            <div class="alert text-center" style="background: #ff0000!important;font-weight: 900 !important;">
                {{ message }}
            </div>
        </div>
    {% endfor %}
<div class="table-responsive w-100">
    <table class="table text-center table-striped table-hover sortable">
        <thead>
        <tr class="item">
            <th scope="col" class="p-3">Responsable</th>
            <th scope="col" class="p-3">Date de création</th>
            <th scope="col" class="p-3">Terminé le</th>
            <th scope="col" class="p-3">Pompe affectée</th>
            <th scope="col" class="p-3">Qte de gasoil de départ</th>
            <th scope="col" class="p-3">Qte de gasoil de fin</th>
            <th scope="col" class="p-3">Qte d'essence de départ</th>
            <th scope="col" class="p-3">Qte d'essence de fin</th>
            <th scope="col" class="p-3">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for shift in shifts %}
{#            <tr onclick="document.location = '{{ path('app_managerial_expense_view', {'id': expenseResultSet.expense.id }) }}'">#}
            <tr class="item">
                <td>{{ shift.employee.lastname ~ ' ' ~ shift.employee.firstname}}</td>
                <td>{{ shift.createdAt|date("d/m/Y") }}</td>
                <td>{{ shift.endedAt ? shift.endedAt|date("d/m/Y H:i:s") : 'En cours'}}</td>
                <td>{{ shift.pump.id }}</td>
                <td>{{ shift.gasoilQuantityAtStart }}</td>
                <td>{{ shift.gasoilQuantityAtEnd ?? 0 }}</td>
                <td>{{ shift.essenceQuantityAtStart }}</td>
                <td>{{ shift.essenceQuantityAtEnd ?? 0 }}</td>
                <td>
                    {% if shift.status == statusInProcess %}
                        <div class="d-flex justify-content-center">
                            <a class="mdc-button mdc-button--raised mdc-ripple-upgraded" href="{{ path('app_pump_end', {id: shift.id}) }}">Terminer la tournée</a>
                        </div>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
