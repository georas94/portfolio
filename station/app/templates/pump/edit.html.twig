{% extends 'base.html.twig' %}

{% block title %}Modifier une pompe{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <div class="d-flex justify-content-end">
            <div class="alert text-center" style="background: #ff0000!important;font-weight: 900 !important;">
                {{ message }}
            </div>
        </div>
    {% endfor %}
    <div class="mt-5">
        {{ form_start(editPumpForm) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(editPumpForm) }}
        </div>

        <div class="row">
            <div style="display: flex;justify-content: center" class="mb-2">
                {{ form_row(editPumpForm.gasoilQuantity) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-2">
                {{ form_row(editPumpForm.essenceQuantity) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-4">
                {{ form_row(editPumpForm.users) }}
            </div>
            <div style="display: flex;justify-content: center" class="col" id="">
                {{ form_row(editPumpForm.save) }}
            </div>
        </div>
        {{ form_end(editPumpForm) }}

    </div>
{% endblock %}
