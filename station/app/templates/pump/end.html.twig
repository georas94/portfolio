{% extends 'base.html.twig' %}

{% block title %}Terminer une tourn√©e{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <div class="d-flex justify-content-end">
            <div class="alert text-center" style="background: #ff0000!important;font-weight: 900 !important;">
                {{ message }}
            </div>
        </div>
    {% endfor %}
    <div class="mt-5">
        {{ form_start(shiftEndForm) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(shiftEndForm) }}
        </div>

        <div class="row">
            <div style="display: flex;justify-content: center" class="mb-2 shift-form-element-div">
                {{ form_row(shiftEndForm.gasoilQuantityAtStart) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-4 shift-form-element-div">
                {{ form_row(shiftEndForm.essenceQuantityAtStart) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-2 shift-form-element-div">
                {{ form_row(shiftEndForm.gasoilQuantityAtEnd) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-4 shift-form-element-div">
                {{ form_row(shiftEndForm.essenceQuantityAtEnd) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-4 shift-form-element-div">
                {{ form_row(shiftEndForm.employee) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-4 shift-form-element-div">
                {{ form_row(shiftEndForm.pump) }}
            </div>
            <div style="display: flex;justify-content: center" class="col" id="">
                {{ form_row(shiftEndForm.save) }}
            </div>
        </div>
        {{ form_end(shiftEndForm) }}

    </div>
{% endblock %}
{% block javascripts %}
{#    {{ parent() }}#}
    <script src="{{ asset('js/pump/end.js') }}"></script>
{% endblock %}
