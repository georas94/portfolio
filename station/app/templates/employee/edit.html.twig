{% extends 'base.html.twig' %}

{% block title %}Mettre Ã  jour fiche{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <div class="d-flex justify-content-end">
            <div class="alert text-center" style="background: #ff0000!important;font-weight: 900 !important;">
                {{ message }}
            </div>
        </div>
    {% endfor %}
    <div class="mt-5">
        {{ form_start(editEmployeeForm) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(editEmployeeForm) }}
        </div>

        <div class="row">
            <div style="display: flex;justify-content: center" class="mb-2 edit-employee-form-element-div">
                {{ form_row(editEmployeeForm.lastname) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-2 edit-employee-form-element-div">
                {{ form_row(editEmployeeForm.firstname) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-2 edit-employee-form-element-div">
                {{ form_row(editEmployeeForm.email) }}
            </div>
            <div style="display: flex;justify-content: center" class="mb-2 edit-employee-form-element-div">
                {{ form_row(editEmployeeForm.roles) }}
            </div>
            <div style="display: flex;justify-content: center" class="col" id="">
                {{ form_row(editEmployeeForm.save) }}
            </div>
        </div>
        {{ form_end(editEmployeeForm) }}

    </div>
{% endblock %}
{% block javascripts %}
    {#    {{ parent() }}#}
    <script src="{{ asset('js/employee/view.js') }}"></script>
{% endblock %}

