{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <section>
        <div class="container product-div">
            <section class="product-view-section">
                <div class="container">
                    <div class="row">
                        <div class="product-seller-block">
                            <div style="display: flex;">
                                <div style="display: flex;flex-direction: column;justify-content: center">
                                    <a href="javascript:history.back()"><i class="fa fa-angle-left fa-4x"></i></a>
                                </div>
                                <div style="display: flex;flex-direction: column;justify-content: center">
                                    <img class="seller-logo" src="{{ asset('img/icons/random_seller_logo.png') }}" alt="Seller logo">
                                </div>
                                <div style="display: flex; flex-direction: column; justify-content: center">
                                    <div style="height: 6em; display: flex; flex-direction: column; justify-content: space-around">
                                        <div>
                                            <span>{{ product.seller.name }}</span>
                                        </div>
                                        <div>
                                            <span class="fa fa-star" id="seller-star-1" ></span>
                                            <span class="fa fa-star" id="seller-star-2" ></span>
                                            <span class="fa fa-star" id="seller-star-3" ></span>
                                            <span class="fa fa-star" id="seller-star-4" ></span>
                                            <span class="fa fa-star" id="seller-star-5" ></span>
                                        </div>
                                        <input class="seller-rating" type="hidden" value="{{ product.seller.rated }}">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="sub-wrapper-div sub-wrapper-div-product">
                            <div class="product-img-div w-25">
                                <img src="{{ asset('img/icons/random_article.png') }}" style="width: 100%;" alt="">
                            </div>
                            <div class="product-info w-50" style="justify-content: center;display: flex;flex-direction: column;align-items: center;">
                                <div class="product-text">
                                    <h2>{{ product.name }}</h2>
                                    <h3 class="text-muted">{{ product.category }}</h3>
                                    <h4 class="" style="margin: 0;"><span>{{ product.price|number_format(2, '.', ' ') }}</span> Cfa</h4>
                                    <br>
                                    <p>Mauris ut enim nisi. Class aptent taciti sociosqu ad litora torquent per conubia
                                        nostra, per inceptos himenaeos. Etiam fringilla, nunc id mattis fermentum.
                                    </p>
                                </div>
                                <div class="product-price-btn d-flex flex-column justify-content-center">
                                    {{ form_start(form, {'attr': {'class': 'p-2'}}) }}
                                        <div class="form-group">
                                            <div class="div-product-quantity" style="display: flex">
                                                <button type="button" id="sub" class="minus btn btn-light"><strong>-</strong></button>
                                                {{ form_widget(form.quantity, {
                                                    'attr': {
                                                        'class': 'rounded border uk-margin uk-card uk-card-hover form-control quantity-value w-25 text-center' ~ (form.quantity.vars.valid ? '' : 'is-invalid')
                                                    }
                                                }) }}
                                                <button type="button" id="add" class="plus btn btn-light"><strong>+</strong></button>
                                            </div>
                                            <div class="invalid-feedback">
                                                {{ form_errors(form.quantity) }}
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center mt-4 div-btn-cart-add-container">
                                            <div class="d-flex justify-content-center btn-cart-add-container">
                                                <button data-product-id="{{ product.id }}" class="w-100 btn" type="button"><strong>Ajouter au panier</strong></button>
                                            </div>
                                        </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <script src="{{ asset('js/product.js') }}"></script>
    </section>
{% endblock %}
