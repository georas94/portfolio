{# templates/search/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Recherche dans les textes officiels</h1>

        <form method="get" action="{{ path('app_search') }}">
            <div class="input-group mb-3">
                <input type="text"
                       name="q"
                       class="form-control"
                       placeholder="Rechercher un terme juridique..."
                       value="{{ query }}"
                       aria-label="Recherche">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </div>
        </form>

        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}

        {% if results|length > 0 %}
            <div class="mt-4">
                <h4 class="mb-10 mt-10">{{ results|length }} résultat(s) trouvé(s)</h4>
                {% for result in results %}
                    <div class="card mb-4">
                        <div class="card-header">
                            {{ result.metadata.source }}
                            {% if result.metadata.pages is defined %}
                                ({{ result.metadata.pages }} pages)
                            {% else %}
                                (Nombre de pages inconnu)
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Score : {{ result.score|number_format(2) }}</h5>

                            {% for fragment in result.highlight %}
                                <div class="alert alert-light mb-5 mt-5 p-2 border-2 border-dashed">
                                    {{ fragment|raw }}
                                    <small class="text-muted mt-2 d-block">
                                        Page approximative : {{ fragment|extract_page_number }}
                                    </small>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="card-footer text-muted">
                            Indexé le : {{ result.metadata.timestamp|date('d/m/Y H:i') }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% elseif query %}
            <div class="alert alert-warning mt-4">
                Aucun résultat trouvé pour "{{ query }}"
            </div>
        {% endif %}
    </div>
{% endblock %}