<div class="min-w-[250px]">
    <h3 class="font-bold text-lg mb-1 text-primary">{{ ao.titre }}</h3>

    <div class="grid grid-cols-2 gap-2 text-sm">
        <div class="font-semibold">Entreprise :</div>
        <div>{{ ao.entreprise.nom }}</div>

        <div class="font-semibold">Secteur :</div>
        <div>{{ ao.entreprise.sectorCodeData.label }}</div>

        <div class="font-semibold">Budget :</div>
        <div class="font-mono">{{ ao.budget|number_format(0, ',', ' ') }} XOF</div>

        <div class="font-semibold">Ville/Région :</div>
        <div class="font-mono">{{ city  is defined  ? city  : ''}}</div>

        <div class="font-semibold">Positions GPS :</div>
        <div class="font-mono">{{ ao.location.lat  ~ ' ' ~ ao.location.lng}}</div>
    </div>

    <div class="mt-3 text-center">
        <a href="{{ path('app_ao_detail', {id: ao.id}) }}"
           class="inline-block px-4 py-2 bg-primary text-dark rounded-lg hover:bg-primary-dark transition-colors text-sm">
            Voir détails →
        </a>
    </div>
</div>