<div class="h-full flex flex-col">
    <!-- Header -->
    <div class="p-6 pb-0">
        <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-semibold">
            {{ ao.reference }}
        </span>
        <span class="px-2 py-1 text-xs font-semibold rounded-full
            {% if ao.statut == 'BROUILLON' %}bg-yellow-100 text-yellow-800
            {% elseif ao.statut == 'PUBLIE' %}bg-blue-100 text-blue-800
            {% elseif ao.statut == 'CLOTURE' %}bg-gray-100 text-gray-800
            {% elseif ao.statut == 'ATTRIBUE' %}bg-green-100 text-green-800{% endif %}">
            {{ ao.statut }}
        </span>
        <h3 class="mt-2 text-xl font-bold text-gray-900">{{ ao.titre }}</h3>
        <p class="mt-1 text-gray-500 line-clamp-2">{{ ao.description|u.truncate(100, '...') }}</p>
    </div>

    <!-- Footer -->
    <div class="mt-auto p-6 pt-4 border-t border-gray-100">
        <div class="flex justify-between items-center">
            <div>
                <span class="text-sm font-medium text-gray-900">{{ ao.budget|format_currency('XOF') }}</span>
                <span class="block text-xs text-gray-500">Cl√¥ture le {{ ao.dateLimite|date('d/m/Y') }}</span>
            </div>
            <a href="{{ path('app_ao_detail', {id: ao.id}) }}"
               class="px-8 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm font-medium">
                Voir
            </a>
        </div>
    </div>
</div>