{% extends 'base.html.twig' %}

{% block title %}Modifier AO {{ ao.reference }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <!-- Affichage des messages flash -->
        {% for message in app.flashes('edit_ao_success') %}
            <div class="inset-0 flex items-center justify-center text-center">
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-5 w-1/2">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="inset-0 flex items-center justify-center text-center">
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-5 w-1/2">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        <div class="max-w-3xl mx-auto">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-2xl font-bold text-gray-800">Modification AO <span
                            class="text-green-600">{{ ao.reference }}</span></h1>
                <a href="{{ path('app_ao_detail', {id: ao.id}) }}"
                   class="text-sm text-green-600 hover:text-green-800 flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Retour à l'AO
                </a>
            </div>

            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="p-8">
                    {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}

                    <!-- Référence -->
                    <div class="space-y-2">
                        {{ form_label(form.reference, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                                </svg>
                            </div>
                            {{ form_widget(form.reference, {'attr': {
                                'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-600 focus:border-green-600 sm:text-sm',
                                'placeholder': 'REF-2023-001'
                            }}) }}
                        </div>
                        {{ form_errors(form.reference) }}
                    </div>

                    <!-- Titre -->
                    <div class="space-y-2">
                        {{ form_label(form.titre, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </div>
                            {{ form_widget(form.titre, {'attr': {
                                'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-600 focus:border-green-600 sm:text-sm',
                                'placeholder': 'Titre descriptif de l\'AO'
                            }}) }}
                        </div>
                        {{ form_errors(form.titre) }}
                    </div>

                    <!-- Description -->
                    <div class="space-y-2">
                        {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.description, {'attr': {
                            'class': 'pl-5 pt-2 block w-full border border-gray-300 rounded-md focus:outline-none focus:ring-green-600 focus:border-green-600 sm:text-sm h-32',
                            'placeholder': 'Détails complets de l\'appel d\'offres...'
                        }}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <!-- Entreprise -->
                    <div class="space-y-2">
                        {{ form_label(form.entreprise, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                </svg>
                            </div>
                            {{ form_widget(form.entreprise, {'attr': {
                                'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-600 focus:border-green-600 sm:text-sm',
                                'placeholder': 'Nom de l\'entreprise'
                            }}) }}
                        </div>
                        {{ form_errors(form.entreprise) }}
                    </div>

                    <!-- Date de clôture -->
                    <div class="space-y-2">
                        {{ form_label(form.dateLimite, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            {{ form_widget(form.dateLimite, {'attr': {
                                'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-600 focus:border-green-600 sm:text-sm'
                            }}) }}
                        </div>
                        {{ form_errors(form.dateLimite) }}
                    </div>

                    <!-- Budget -->
                    <div class="space-y-2">
                        {{ form_label(form.budget, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            {{ form_widget(form.budget, {'attr': {
                                'class': 'block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-600 focus:border-green-600 sm:text-sm',
                                'placeholder': 'Montant en XOF'
                            }}) }}
                        </div>
                        {{ form_errors(form.budget) }}
                    </div>

                    <!-- Statut -->
                    <div class="space-y-2">
                        {{ form_label(form.statut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
                                </svg>
                            </div>
                            {{ form_widget(form.statut, {'attr': {
                                'class': 'block w-full pl-3 pr-10 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-600 focus:border-green-600 sm:text-sm appearance-none bg-white'
                            }}) }}
                        </div>
                        {{ form_errors(form.statut) }}
                    </div>
                    {# Ajoutez cette section après le champ Statut et avant Regénérer PDF #}

                    <!-- Documents existants -->
                    {% if ao.documents|length > 0 %}
                        <h3 class="text-lg font-medium text-gray-900">Pièces jointes existantes</h3>
                        <div class="space-y-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {% for document in ao.documents %}
                                    <div class="flex items-center p-3 border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
                                        <div class="flex-shrink-0">
                                            <svg class="h-10 w-10 text-gray-400" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                                            </svg>
                                        </div>
                                        <div class="ml-4 min-w-0 flex-1">
                                            <div class="text-sm font-medium text-gray-900 truncate">{{ document.originalName }}</div>
                                            <div class="text-sm text-gray-500">{{ (document.fileSize / 1024)|round(2) }}
                                                KB
                                            </div>
                                        </div>

                                        {# Boutons d'action #}
                                        <div class="flex items-center">
                                            {% if document.mimeType in ['image/jpeg', 'image/png', 'image/gif'] %}
                                                {# Lightbox pour les images #}
                                                <div x-data="{ open: false }" class="relative">
                                                    <button type="button"
                                                            @click="open = true"
                                                            class="ml-2 p-2 text-green-500 hover:text-green-700"
                                                            title="Visualiser">
                                                        <svg class="h-5 w-5" fill="none" stroke="currentColor"
                                                             viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                  stroke-width="2"
                                                                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                  stroke-width="2"
                                                                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                                        </svg>
                                                    </button>

                                                    {# Lightbox Overlay - Version corrigée #}
                                                    <template x-teleport="body">
                                                        <div x-show="open"
                                                             x-transition:enter="ease-out duration-300"
                                                             x-transition:enter-start="opacity-0"
                                                             x-transition:enter-end="opacity-100"
                                                             x-transition:leave="ease-in duration-200"
                                                             x-transition:leave-start="opacity-100"
                                                             x-transition:leave-end="opacity-0"
                                                             @click.self="open = false"
                                                             @keydown.escape.window="open = false"
                                                             class="fixed inset-0 z-[99] flex items-center justify-center p-4 bg-black bg-opacity-75"
                                                             style="display: none">

                                                            {# Conteneur de l'image #}
                                                            <div class="relative max-w-full max-h-full">
                                                                <img src="{{ asset('uploads/ao_documents/' ~ document.fileName) }}"
                                                                     alt="{{ document.originalName }}"
                                                                     class="max-w-full max-h-full object-contain">

                                                                {# Bouton de fermeture #}
                                                                <button @click="open = false"
                                                                        type="button"
                                                                        class="absolute top-4 right-4 text-red hover:text-gray-300 focus:outline-none"
                                                                        aria-label="Fermer">
                                                                    <svg class="h-8 w-8" fill="none"
                                                                         stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round"
                                                                              stroke-linejoin="round" stroke-width="2"
                                                                              d="M6 18L18 6M6 6l12 12"/>
                                                                    </svg>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </template>
                                                </div>
                                            {% elseif document.mimeType == 'application/pdf' %}
                                                {# Nouvel onglet pour les PDF #}
                                                <a href="{{ path('app_ao_document_preview', {'id': document.id}) }}"
                                                   target="_blank"
                                                   class="ml-2 p-2 text-green-500 hover:text-green-700"
                                                   title="Visualiser PDF">
                                                    <svg class="h-5 w-5" fill="none" stroke="currentColor"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              stroke-width="2"
                                                              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                    </svg>
                                                </a>
                                            {% endif %}

                                            {# Téléchargement pour tous les formats #}
                                            <a href="{{ asset('uploads/ao_documents/' ~ document.fileName) }}"
                                               download="{{ document.originalName }}"
                                               class="ml-2 p-2 text-gray-500 hover:text-gray-700"
                                               title="Télécharger">
                                                <svg class="h-5 w-5" fill="none" stroke="currentColor"
                                                     viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                                                </svg>
                                            </a>
                                            <button type="button"
                                                    class="ml-2 p-2 text-red-500 hover:text-red-700 delete-document"
                                                    data-delete-url="{{ path('app_ao_delete_document', {'id': document.id}) }}"
                                                    title="Supprimer">
                                                <svg class="h-5 w-5" fill="none" stroke="currentColor"
                                                     viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                          stroke-width="2"
                                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% else %}
                        <p class="text-sm text-gray-500">Aucune pièce jointe existante pour cet AO</p>
                    {% endif %}

                    <!-- Upload de nouveaux fichiers -->
                    <div
                            x-data="{
                                files: [],
                                handleFiles(event) {
                                    const maxSize = 5 * 1024 * 1024; // 5 Mo
                                    this.files = [];

                                    for (let file of event.target.files) {
                                        if (file.size <= maxSize) {
                                            this.files.push(file);
                                        } else {
                                            alert(`${file.name} est trop lourd (max 5 Mo)`);
                                        }
                                    }
                                },
                                getFileIcon(file) {
                                    const type = file.type;

                                    if (type.includes('pdf')) {
                                        return 'pdf';
                                    } else if (type.includes('image')) {
                                        return 'image';
                                    } else if (type.includes('word')) {
                                        return 'word';
                                    } else if (type.includes('excel') || type.includes('spreadsheetml')) {
                                        return 'excel';
                                    } else if (type.includes('zip')) {
                                        return 'zip';
                                    } else {
                                        return 'default';
                                    }
                                }
                            }"
                            class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center cursor-pointer transition hover:border-green-500 hover:bg-green-50 hover:shadow-md hover:scale-105"
                            @click="$refs.fileInput.click()"
                            :class="{'border-green-500 bg-green-50': files.length > 0}"
                            @dragover.prevent
                    >
                        <!-- Texte dans la zone -->
                        <p class="text-gray-500"><span class="text-green-700">Clique pour parcourir</span></p>

                        <!-- Input file caché généré par Symfony -->
                        {{ form_widget(form.documents, {
                            'attr': {
                                'class': 'hidden',
                                'x-ref': 'fileInput',
                                'x-on:change': 'handleFiles($event)'
                            }
                        }) }}

                        <!-- Affichage des fichiers sélectionnés avec icônes -->
                        <template x-if="files.length > 0">
                            <ul class="mt-4 space-y-2 text-left text-sm text-gray-700">
                                <template x-for="(file, index) in files" :key="file.name">
                                    <li class="flex items-center gap-2">
                                        <!-- Icône spécifique en fonction du type MIME -->
                                        <!-- Icône dynamique -->
                                        <template x-if="getFileIcon(file) === 'pdf'">
                                            <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M6 2h9l5 5v13a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2z"/>
                                            </svg>
                                        </template>

                                        <template x-if="getFileIcon(file) === 'image'">
                                            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M3 4a1 1 0 011-1h16a1 1 0 011 1v16a1 1 0 01-1 1H4a1 1 0 01-1-1V4z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M8 11l4 4 5-5"/>
                                            </svg>
                                        </template>

                                        <template x-if="getFileIcon(file) === 'word'">
                                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M6 2h9l5 5v13a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2z"/>
                                            </svg>
                                        </template>

                                        <template x-if="getFileIcon(file) === 'excel'">
                                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M6 2h9l5 5v13a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2z"/>
                                            </svg>
                                        </template>

                                        <template x-if="getFileIcon(file) === 'zip'">
                                            <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M6 2h9l5 5v13a2 2 0 01-2 2H6a2 2 0 01-2-2V4a2 2 0 012-2z"/>
                                            </svg>
                                        </template>

                                        <template x-if="getFileIcon(file) === 'default'">
                                            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M4 4h16v16H4z"/>
                                            </svg>
                                        </template>
                                        <!-- Nom du fichier -->
                                        <span x-text="file.name"></span>
                                        <!-- Bouton de suppression -->
                                        <button type="button"
                                                @click="files.splice(index, 1);$event.preventDefault(); $event.stopPropagation()"
                                                class="text-red-500 hover:text-red-700">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                        </button>
                                    </li>
                                </template>
                            </ul>
                        </template>
                    </div>
                    <!-- Regénérer PDF -->
                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            {{ form_widget(form.regenerate_pdf, {'attr': {
                                'class': 'h-4 w-4 text-green-600 focus:ring-green-600 border-gray-300 rounded'
                            }}) }}
                        </div>
                        <div class="ml-3 text-sm">
                            {{ form_label(form.regenerate_pdf, null, {'label_attr': {
                                'class': 'font-medium text-gray-700'
                            }}) }}
                            <p class="text-gray-500">Cocher pour regénérer le PDF avec les nouvelles modifications</p>
                        </div>
                    </div>

                    <!-- Boutons -->
                    <div class="mt-8 pt-5 border-t border-gray-200 flex justify-end space-x-3">
                        <a href="{{ path('app_ao_detail', {id: ao.id}) }}"
                           class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600">
                            Annuler
                        </a>
                        <button type="submit"
                                class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600">
                            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M5 13l4 4L19 7"/>
                            </svg>
                            Enregistrer les modifications
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Gestion de la suppression des documents
                document.querySelectorAll('.delete-document').forEach(button => {
                    button.addEventListener('click', function (e) {
                        e.preventDefault(); // Empêche la soumission du formulaire
                        const deleteUrl = this.getAttribute('data-delete-url');

                        if (confirm('Êtes-vous sûr de vouloir supprimer ce document ?')) {
                            fetch(deleteUrl, {
                                method: 'DELETE',
                                headers: {
                                    'X-Requested-With': 'XMLHttpRequest',
                                    'Content-Type': 'application/json'
                                    // 'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
                                }
                            })
                                .then(response => {
                                    if (response.ok) {
                                        window.location.reload();
                                    } else {
                                        alert('Erreur lors de la suppression');
                                    }
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                    alert('Erreur lors de la suppression');
                                });
                        }
                    });
                });

                // Gestion de l'upload de fichiers
                const dropZone = document.querySelector('[x-data]');

                if (dropZone) {
                    dropZone.addEventListener('click', function (e) {
                        if (e.target === this) { // Seulement si on clique sur la zone, pas sur un enfant
                            this.querySelector('[x-ref="fileInput"]').click();
                        }
                    });

                    dropZone.addEventListener('dragover', (e) => {
                        e.preventDefault();
                        dropZone.classList.add('border-green-500', 'bg-green-50');
                    });

                    dropZone.addEventListener('dragleave', () => {
                        dropZone.classList.remove('border-green-500', 'bg-green-50');
                    });

                    dropZone.addEventListener('drop', (e) => {
                        e.preventDefault();
                        dropZone.classList.remove('border-green-500', 'bg-green-50');

                        const files = e.dataTransfer.files;
                        const fileInput = dropZone.querySelector('[x-ref="fileInput"]');
                        fileInput.files = files;

                        // Déclenche l'événement change pour Alpine.js
                        const event = new Event('change');
                        fileInput.dispatchEvent(event);
                    });
                }

                // Animation pour les champs invalides
                document.querySelectorAll('input, select, textarea').forEach(input => {
                    input.addEventListener('invalid', () => {
                        input.classList.add('border-red-500', 'animate-pulse');
                        setTimeout(() => {
                            input.classList.remove('animate-pulse');
                        }, 1000);
                    });

                    input.addEventListener('input', () => {
                        if (input.classList.contains('border-red-500')) {
                            input.classList.remove('border-red-500');
                        }
                    });
                });
            });
        </script>
